<style>
 body{
   
   background-color: #080c2e;
   border-radius: 3px;
   margin: 10%;
   margin-top: 5%;
   color: aliceblue;
  }
</style>



<h2 class="text-center" style=" color:aliceblue;">Assigned subjects for student {{studentdetails.std_name}}</h2>

<table class="table " >
    <thead>
        <tr style=" color:aliceblue;">
            <th scope="col">Passed_Subject Code</th>
            <th scope="col">Passed_Subject Name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each studentSubjects}}
        <tr style=" color:aliceblue;">
            <td>{{Subject.sub_code}}</td>
            <td>{{Subject.sub_name}}</td>
            <td>
                <form action="/student/{{_id}}/deleteAssigned?_method=DELETE" method="post"  >
                    <button type="submit" class="btn btn-link delete"
                        onclick="return confirm('Are you sure you wish to delete this Subject?');">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                            <path
                                d="M7 4V2H17V4H22V6H20V21C20 21.5523 19.5523 22 19 22H5C4.44772 22 4 21.5523 4 21V6H2V4H7ZM6 6V20H18V6H6ZM9 9H11V17H9V9ZM13 9H15V17H13V9Z"
                               style="fill:rgb(246, 246, 250);">
                            </path>
                        </svg>
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>