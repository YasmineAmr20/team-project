<form action="/doctorAdmin/getAllDoctors/{{doctor._id}}?_method=PUT" method="post" class="addDoctorForm">

    <!-- #region form title-->
    <h1 class="text-center">Edit Doctor {{doctor.Doc_name}}</h1>
    <!-- #endregion -->

    {{!-- Doc_code --}}
    <div class="my-3 inputDoctorData">
        <label for="">Code</label>
        <input type="number" class="form-control" name="Doc_code" value="{{doctor.Doc_code}}">
    </div>

    {{!-- Doc_name --}}
    <div class="my-3 inputDoctorData">
        <label for="">Name</label>
        <input type="text" class="form-control" name="Doc_name" value="{{doctor.Doc_name}}">
    </div>

    {{!-- Doc_email --}}
    <div class="my-3 inputDoctorData">
        <label for="">Email</label>
        <input type="text" class="form-control" name="Doc_email" value="{{doctor.Doc_email}}">
    </div>

    {{!-- Doc_password --}}
    <div class="my-3 inputDoctorData">
        <label for="">Password</label>
        <input type="text" class="form-control" name="Doc_password" value="{{doctor.Doc_password}}">
    </div>

    {{!-- add button --}}
    <div class="my-3">
        <button type="submit" class="btn btn-info addDoctorbtn">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                <path
                    d="M12 4C14.7486 4 17.1749 5.38626 18.6156 7.5H16V9.5H22V3.5H20V5.99936C18.1762 3.57166 15.2724 2 12 2C6.47715 2 2 6.47715 2 12H4C4 7.58172 7.58172 4 12 4ZM20 12C20 16.4183 16.4183 20 12 20C9.25144 20 6.82508 18.6137 5.38443 16.5H8V14.5H2V20.5H4V18.0006C5.82381 20.4283 8.72764 22 12 22C17.5228 22 22 17.5228 22 12H20Z"
                    fill="rgba(255,255,255,1)"></path>
            </svg>
            Update
        </button>
    </div>

</form>